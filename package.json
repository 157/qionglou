{
  "name": "qionglou",
  "version": "1.0.0",
  "description": "An atomic component library for Vue 3",
  "scripts": {
    "start": "pnpm run -C start dev",
    "start:docs": "pnpm run -C docs dev",
    "build": "pnpm run clean && vite build",
    "build:docs": "pnpm run -C docs build",
    "lint": "prettier --write .",
    "test": "vitest",
    "clean": "rimraf dist",
    "prepare": "husky install"
  },
  "author": "Rhyme, Loyal",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "start",
    "docs"
  ],
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@qionglou/theme": "workspace:*",
    "sass": "^1.61.0",
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.3",
    "@types/node": "^18.16.3",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.3.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gsap": "^3.11.4",
    "happy-dom": "^9.10.9",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.0.4",
    "unplugin-vue-components": "^0.23.0",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.3",
    "vitest": "^0.31.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jiangxue-team/qionglou.git"
  },
  "keywords": [
    "qionglou"
  ],
  "bugs": {
    "url": "https://github.com/Jiangxue-team/qionglou/issues"
  },
  "homepage": "https://github.com/Jiangxue-team/qionglou#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,vue,json}": [
      "prettier --write"
    ]
  }
}
